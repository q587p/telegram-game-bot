{
  "name": "telegram-game-bot",
  "version": "0.0.30",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "start": "node dist/bot.js",
    "preversion": "npm run typecheck",
    "version": "node scripts/update-version-banner.cjs && git add src/bot.ts",
    "postversion": "git push && git push --tags",
    "dev": "nodemon --watch src --exec \"npm run build && node dist/bot.js\"",
    "lint": "echo \"lint disabled\""
  },
  "dependencies": {
    "grammy": "^1.38.2",
    "@grammyjs/i18n": "1.1.2",
    "dotenv": "^16.4.5"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "typescript": "^5.6.3",
    "nodemon": "^3.1.7",
    "concurrently": "^8.2.2",
    "husky": "^9.1.6"
  }
}
